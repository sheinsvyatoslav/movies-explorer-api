{
  "compileOnSave": true,
  "compilerOptions": {
      "outDir": "./build",
      "allowJs": true,
      "target": "es6",
      "allowUnreachableCode": false,
      "noImplicitReturns": true,
      "noImplicitAny": true,
      "typeRoots": [ "./typings" ],
      "outFile": "./build/combined.js",
      "module": "system",
      "moduleResolution": "node",
  },
  "include": [
      "./**/*"
  ],
  "exclude": [
      "./plugins/**/*",
      "./typings/**/*",
      "./build/**/*" // This is what fixed it!
  ],
  "types": [ "node" ],
  "typeRoots": [ "../node_modules/@types" ]
}